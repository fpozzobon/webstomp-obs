{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "inlineSourceMap": false,
    "declaration": true,
    "outDir": "../types"
  },
  "filesGlob": [
    "./**/*.ts",
    "!./node_modules/**/*.ts",
    "!./example/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "typings/globals",
    "typings/global.d.ts",
    "example"
  ]
}
